<UserControl x:Class="Manager.Views.Demos.DemoDetailsView"
             xmlns:mahapps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:converters="clr-namespace:Manager.Converters"
             xmlns:mouse="clr-namespace:Manager.Internals.Mouse"
             xmlns:properties="clr-namespace:Manager.Properties"
             xmlns:internals="clr-namespace:Manager.Internals"
             xmlns:controls="clr-namespace:Manager.Controls"
             mc:Ignorable="d"
             Name="DetailsUserControl"
             d:DesignHeight="720"
             d:DesignWidth="1280"
             DataContext="{Binding DemoDetails, Source={StaticResource Locator}}">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" True="Visible" />
            <converters:MapNameToImageConverter x:Key="MapNameToImageConverter" />
            <converters:BooleanInvertedConverter x:Key="BooleanInvertedConverter" />
            <converters:ValveDemoToVisibilityConverter x:Key="ValveDemoToVisibilityConverter" />
            <converters:RankToImageConverter x:Key="RankToImageConverter" />
            <converters:DoubleToStringConverter x:Key="DoubleToStringConverter" />
            <converters:StringToDemoStatusConverter x:Key="StringToDemoStatusConverter" />
            <converters:SideToStringConverter x:Key="SideToStringConverter" />
            <converters:RoundTypeToStringConverter x:Key="RoundTypeToStringConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding WindowLoaded, Mode=OneWay}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.InputBindings>
        <KeyBinding Command="{Binding ShowDemoListCommand}"
                    Gesture="CTRL+B" />
        <KeyBinding Command="{Binding ShowDemoHeatmapCommand}"
                    Gesture="CTRL+H" />
        <KeyBinding Command="{Binding ShowDemoKillsCommand}"
                    Gesture="CTRL+K" />
        <KeyBinding Command="{Binding AnalyzeDemoCommand}"
                    Gesture="CTRL+S" />
        <KeyBinding Command="{Binding DemoList.WatchDemoCommand, Source={StaticResource Locator}}"
                    CommandParameter="{Binding Demo}"
                    Gesture="CTRL+W" />
        <KeyBinding Command="{Binding ExportDemoToExcelCommand}"
                    Gesture="CTRL+X" />
        <KeyBinding Command="{Binding ShowOverviewCommand}"
                    Gesture="CTRL+O" />
        <KeyBinding Command="{Binding ShowDemoDamagesCommand}"
                    Gesture="CTRL+D" />
        <KeyBinding Command="{Binding ShowDemoFlashbangsCommand}"
                    Gesture="CTRL+F" />
        <KeyBinding Command="{Binding ShowRoundCommand}"
                    CommandParameter="{Binding SelectedRound.Number}"
                    Gesture="CTRL+R" />
        <KeyBinding Command="{Binding ShowDemoStuffsCommand}"
                    Gesture="CTRL+G" />
        <KeyBinding Command="{Binding ShowDemoMovie}"
                    Gesture="CTRL+M" />
        <KeyBinding Command="{Binding GoToPreviousDemoCommand}"
                    Gesture="CTRL+LEFT" />
        <KeyBinding Command="{Binding GoToNextDemoCommand}"
                    Gesture="CTRL+RIGHT" />
        <mouse:MouseBindingExtended Gesture="XButton1"
                                    Command="{Binding ShowDemoListCommand}" />
    </UserControl.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Height="40">
                <StackPanel Orientation="Horizontal">
                    <controls:ButtonWithIcon
                        Text="{x:Static properties:Resources.Back}"
                        ToolTip="{x:Static properties:Resources.ToolTipBack}"
                        Icon="ArrowLeft"
                        Command="{Binding ShowDemoListCommand}" />
                    <controls:ButtonWithIcon
                        Text="{x:Static properties:Resources.Analyze}"
                        ToolTip="{x:Static properties:Resources.ToolTipAnalyze}"
                        Icon="FileFind"
                        Command="{Binding AnalyzeDemoCommand}" />
                    <controls:ButtonWithIcon
                        Text="{x:Static properties:Resources.Watch}"
                        ToolTip="{x:Static properties:Resources.ToolTipWatchDemo}"
                        Icon="Play"
                        Command="{Binding DemoList.WatchDemoCommand, Source={StaticResource Locator}}"
                        CommandParameter="{Binding Demo}" />
                    <controls:ButtonWithIcon
                        Text="{x:Static properties:Resources.WatchRound}"
                        ToolTip="{x:Static properties:Resources.ToolTipWatchRound}"
                        Icon="Play"
                        Command="{Binding DemoDetails.WatchRoundCommand, Source={StaticResource Locator}}"
                        CommandParameter="{Binding SelectedRound}" />
                    <controls:ButtonWithIcon
                        Text="{x:Static properties:Resources.Export}"
                        ToolTip="{x:Static properties:Resources.ToolTipExportXls}"
                        Icon="MicrosoftExcel"
                        Command="{Binding ExportDemoToExcelCommand}" />
                    <controls:ButtonWithIcon
                        Text="{x:Static properties:Resources.ExportChat}"
                        ToolTip="{x:Static properties:Resources.ToolTipExportChat}"
                        Icon="Chat"
                        Command="{Binding ExportChatCommand}" />
                    <controls:ButtonWithIcon
                        Text="{x:Static properties:Resources.Movie}"
                        ToolTip="{x:Static properties:Resources.ToolTipMovie}"
                        Icon="MovieRoll"
                        Command="{Binding ShowDemoMovie}" />

                    <TextBlock Text="{x:Static properties:Resources.LabelPlayerStats}"
                               Style="{StaticResource CurrentFolderStyle}" />
                    <ComboBox Style="{StaticResource ComboBoxAccountsStyle}"
                              ItemsSource="{Binding Demo.Players}"
                              SelectedItem="{Binding SelectedPlayerStats}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="SteamId"
                              IsEnabled="{Binding Source={StaticResource Locator}, Path=Settings.IsShowAllPlayers, Converter={StaticResource BooleanInvertedConverter}}"
                              mahapps:TextBoxHelper.Watermark="{x:Static properties:Resources.Player}" />
                    <CheckBox x:Name="CheckBoxShowAllPlayers"
                              Content="{x:Static properties:Resources.ShowAll}"
                              Margin="5"
                              IsChecked="{Binding Source={StaticResource Locator}, Path=Settings.IsShowAllPlayers}"
                              Command="{Binding ShowAllPlayersCommand}"
                              CommandParameter="{Binding IsChecked, ElementName=CheckBoxShowAllPlayers}" />

                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <controls:ButtonWithIcon
                        ToolTip="{x:Static properties:Resources.ToolTipPreviousDemo}"
                        Icon="ArrowLeft"
                        Command="{Binding GoToPreviousDemoCommand}" />
                    <controls:ButtonWithIcon
                        ToolTip="{x:Static properties:Resources.ToolTipNextDemo}"
                        Icon="ArrowRight"
                        Command="{Binding GoToNextDemoCommand}" />
                </StackPanel>
            </Grid>
        </Grid>

        <Grid Grid.Row="1"
              Height="40">
            <StackPanel Orientation="Horizontal">
                <controls:ButtonWithIcon
                    Text="{x:Static properties:Resources.Heatmap}"
                    ToolTip="{x:Static properties:Resources.ToolTipHeatmap}"
                    Icon="MapSearch"
                    Command="{Binding ShowDemoHeatmapCommand}" />
                <controls:ButtonWithIcon
                    Text="{x:Static properties:Resources.Overview}"
                    ToolTip="{x:Static properties:Resources.ToolTipOverview}"
                    Icon="MovieOpenPlay"
                    Command="{Binding ShowOverviewCommand}" />
                <controls:ButtonWithIcon
                    Text="{x:Static properties:Resources.Kills}"
                    ToolTip="{x:Static properties:Resources.ToolTipKillsDetails}"
                    Icon="SkullCrossbones"
                    Command="{Binding ShowDemoKillsCommand}" />
                <controls:ButtonWithIcon
                    Text="{x:Static properties:Resources.Damages}"
                    ToolTip="{x:Static properties:Resources.ToolTipDamages}"
                    Icon="HeartHalfFull"
                    Command="{Binding ShowDemoDamagesCommand}" />
                <controls:ButtonWithIcon
                    Text="{x:Static properties:Resources.Flashbangs}"
                    ToolTip="{x:Static properties:Resources.ToolTipFlashbangs}"
                    Icon="EyeOff"
                    Command="{Binding ShowDemoFlashbangsCommand}" />
                <controls:ButtonWithIcon
                    Text="{x:Static properties:Resources.Stuffs}"
                    ToolTip="{x:Static properties:Resources.ToolTipStuffs}"
                    Icon="Pistol"
                    Command="{Binding ShowDemoStuffsCommand}" />
                <controls:ButtonWithIcon
                    Text="{x:Static properties:Resources.RoundDetails}"
                    ToolTip="{x:Static properties:Resources.ToolTipRoundDetails}"
                    Icon="TextBox"
                    Command="{Binding ShowRoundCommand}"
                    CommandParameter="{Binding SelectedRound.Number}" />
                <controls:ButtonWithIcon
                    Text="{x:Static properties:Resources.PlayerDetails}"
                    ToolTip="{x:Static properties:Resources.ToolTipPlayerDetails}"
                    Icon="AccountDetails"
                    Command="{Binding ShowPlayerCommand}"
                    CommandParameter="{Binding SelectedPlayer}" />
            </StackPanel>
        </Grid>
        <!-- end action bar -->

        <Grid Grid.Row="2">
            <controls:LoadingMessage Visible="{Binding IsBusy}"
                                     Message="{Binding Notification}" />
        </Grid>

        <!--Details-->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ScrollViewer Margin="0 5 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Button Height="400"
                                Margin="2"
                                Width="8"
                                Command="{Binding ToggleLeftSideCommand}"
                                Style="{DynamicResource GeneralButton}" />
                    </Grid>

                    <Grid Grid.Column="1"
                          Margin="5 0 0 0"
                          Visibility="{Binding IsLeftSideVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Vertical"
                                    Grid.Row="0">
                            <Border BorderThickness="1"
                                    BorderBrush="{DynamicResource MahApps.Brushes.Highlight}">
                                <Image Source="{Binding Demo, Converter={StaticResource MapNameToImageConverter}}"
                                       Stretch="Fill"
                                       MaxHeight="250" />
                            </Border>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{x:Static properties:Resources.LabelFilename}"
                                           Grid.Column="0"
                                           Style="{StaticResource TextBlockHighlight}">
                                    <Run Text=" " />
                                </TextBlock>
                                <TextBlock Text="{Binding Demo.Name}"
                                           Grid.Column="1"
                                           Style="{StaticResource TextBlockSmall}" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{x:Static properties:Resources.LabelMap}"
                                           Grid.Column="0"
                                           Style="{StaticResource TextBlockHighlight}">
                                    <Run Text=" " />
                                </TextBlock>
                                <TextBlock Text="{Binding Demo.MapName}"
                                           Grid.Column="1"
                                           Style="{StaticResource TextBlockSmall}" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{x:Static properties:Resources.LabelType}"
                                           Grid.Column="0"
                                           Style="{StaticResource TextBlockHighlight}">
                                    <Run Text=" " />
                                </TextBlock>
                                <TextBlock Text="{Binding Demo.Type}"
                                           Grid.Column="1"
                                           Style="{StaticResource TextBlockSmall}" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{x:Static properties:Resources.LabelHostname}"
                                           Grid.Column="0"
                                           Style="{StaticResource TextBlockHighlight}">
                                    <Run Text=" " />
                                </TextBlock>
                                <TextBlock Text="{Binding Demo.Hostname}"
                                           Grid.Column="1"
                                           Style="{StaticResource TextBlockSmall}" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{x:Static properties:Resources.LabelClientname}"
                                           Grid.Column="0"
                                           Style="{StaticResource TextBlockHighlight}">
                                    <Run Text=" " />
                                </TextBlock>
                                <TextBlock Text="{Binding Demo.ClientName}"
                                           Grid.Column="1"
                                           Style="{StaticResource TextBlockSmall}" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{x:Static properties:Resources.LabelTickrate}"
                                           Grid.Column="0"
                                           Style="{StaticResource TextBlockHighlight}">
                                    <Run Text=" " />
                                </TextBlock>
                                <TextBlock Text="{Binding Demo.ServerTickrate}"
                                           Grid.Column="1"
                                           Style="{StaticResource TextBlockSmall}" />
                            </Grid>

                            <Grid Margin="0 2 0 2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="{x:Static properties:Resources.Source}"
                                           Style="{StaticResource TextBlockHighlight}">
                                    <Run Text=" " />
                                </TextBlock>
                                <ComboBox x:Name="SourceList"
                                          Grid.Column="1"
                                          ItemsSource="{Binding Source={StaticResource Locator}, Path=DemoDetails.Sources}"
                                          SelectedValue="{Binding Demo.SourceName, Mode=OneWay}"
                                          DisplayMemberPath="Label"
                                          SelectedValuePath="Name"
                                          IsEnabled="{Binding IsBusy, Converter={StaticResource BooleanInvertedConverter}}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction
                                                Command="{Binding Source={StaticResource Locator}, Path=DemoDetails.SetDemoSourceCommand}"
                                                CommandParameter="{Binding ElementName=SourceList, Path=SelectedItem}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ComboBox>
                            </Grid>

                            <Grid Margin="0 2 0 2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="{x:Static properties:Resources.LabelStatus}"
                                           Style="{StaticResource TextBlockHighlight}">
                                    <Run Text=" " />
                                </TextBlock>
                                <ComboBox x:Name="Statuses"
                                          Grid.Column="1"
                                          ItemsSource="{Binding Source={StaticResource Locator}, Path=Settings.StatusList}"
                                          SelectedItem="{Binding Demo.Status, Converter={StaticResource StringToDemoStatusConverter}, Mode=OneTime}"
                                          DisplayMemberPath="Label"
                                          SelectedValuePath="Name">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction Command="{Binding UpdateDemoStatus}"
                                                                   CommandParameter="{Binding ElementName=Statuses, Path=SelectedItem}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ComboBox>
                            </Grid>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="{x:Static properties:Resources.CommentLabel}"
                                           Grid.Row="0"
                                           Style="{StaticResource TextBlockHighlight}"
                                           VerticalAlignment="Bottom">
                                    <Run Text=" " />
                                </TextBlock>
                                <TextBox Grid.Row="1"
                                         x:Name="TextBoxComment"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         Text="{Binding Demo.Comment}" />
                                <Button Grid.Row="2"
                                        HorizontalAlignment="Center"
                                        Command="{Binding SaveCommentDemoCommand}"
                                        CommandParameter="{Binding ElementName=TextBoxComment, Path=Text}"
                                        Style="{DynamicResource GeneralButton}"
                                        Content="{x:Static properties:Resources.SaveComment}" />
                            </Grid>
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/images/headshot.png"
                                           Width="50"
                                           Height="30" />
                                    <TextBlock Text="{x:Static properties:Resources.LabelMostHsPercent}"
                                               Style="{StaticResource TextBlockHighlight}">
                                        <Run Text=" " />
                                    </TextBlock>
                                    <TextBlock Text="{Binding Demo.MostHeadshotPlayer.Name}"
                                               Style="{StaticResource TextBlockSmall}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0 5 0 0">
                                    <Image Source="/Resources/images/bomb.png"
                                           Width="45"
                                           Height="23" />
                                    <TextBlock Text="{x:Static properties:Resources.LabelMostBombPlanted}"
                                               Style="{StaticResource TextBlockHighlight}"
                                               Margin="5 0 0 0">
                                        <Run Text=" " />
                                    </TextBlock>
                                    <TextBlock Text="{Binding Demo.MostBombPlantedPlayer.Name}"
                                               Style="{StaticResource TextBlockSmall}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0 5 0 0">
                                    <Image Source="/Resources/images/suicide.png"
                                           Width="45"
                                           Height="22" />
                                    <TextBlock Text="{x:Static properties:Resources.LabelMostEntryKills}"
                                               Style="{StaticResource TextBlockHighlight}"
                                               Margin="5 0 0 0">
                                        <Run Text=" " />
                                    </TextBlock>
                                    <TextBlock Text="{Binding Demo.MostEntryKillPlayer.Name}"
                                               Style="{StaticResource TextBlockSmall}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0 5 0 0">
                                    <Image Source="/Resources/images/deagle.png"
                                           Width="45"
                                           Height="22" />
                                    <TextBlock Text="{x:Static properties:Resources.LabelMostKillingWeapon}"
                                               Style="{StaticResource TextBlockHighlight}"
                                               Margin="5 0 0 0">
                                        <Run Text=" " />
                                    </TextBlock>
                                    <TextBlock Text="{Binding Demo.MostKillingWeapon.Name}"
                                               Style="{StaticResource TextBlockSmall}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0 5 0 0">
                                    <Image Source="/Resources/images/bullet.png"
                                           Width="45"
                                           Height="22" />
                                    <TextBlock Text="{x:Static properties:Resources.LabelMostDamagingWeapon}"
                                               Style="{StaticResource TextBlockHighlight}"
                                               Margin="5 0 0 0">
                                        <Run Text=" " />
                                    </TextBlock>
                                    <TextBlock Text="{Binding Demo.MostDamagingWeapon.Name}"
                                               Style="{StaticResource TextBlockSmall}" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </ScrollViewer>

            <Grid Grid.Column="1">
                <Grid Margin="10 0 10 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding Demo.TeamCT.Name}"
                                                   Style="{StaticResource TeamTitleScoreboard}" />
                                        <TextBlock Text="{Binding Demo.ScoreTeamCt}"
                                                   Style="{StaticResource TeamScoreScoreboard}" />
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="1"
                                      HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <StackPanel Orientation="Vertical" Margin="0 0 2 0">
                                            <TextBlock Text="{Binding Demo.ScoreFirstHalfTeamCt}"
                                                       Style="{StaticResource HalfScoreScoreboard}"
                                                       Foreground="{StaticResource BlueBrush}" />
                                            <TextBlock Text="|"
                                                       Style="{StaticResource HalfScoreScoreboard}" />
                                            <TextBlock Text="{Binding Demo.ScoreFirstHalfTeamT}"
                                                       Style="{StaticResource HalfScoreScoreboard}"
                                                       Foreground="{StaticResource LightRedColorBrush}" />
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical" Margin="0 0 2 0">
                                            <TextBlock Text="{Binding Demo.ScoreSecondHalfTeamCt}"
                                                       Style="{StaticResource HalfScoreScoreboard}"
                                                       Foreground="{StaticResource LightRedColorBrush}" />
                                            <TextBlock Text="|"
                                                       Style="{StaticResource HalfScoreScoreboard}" />
                                            <TextBlock Text="{Binding Demo.ScoreSecondHalfTeamT}"
                                                       Style="{StaticResource HalfScoreScoreboard}"
                                                       Foreground="{StaticResource BlueBrush}" />
                                        </StackPanel>
                                        <ListView ItemsSource="{Binding Demo.Overtimes}"
                                                  Style="{StaticResource OvertimeScoreboardTemplate}"
                                                  ItemContainerStyle="{StaticResource OvertimeScoreboardItemStyle}"
                                                  ItemsPanel="{StaticResource ScoreboardItemsPanel}"
                                                  ItemTemplate="{StaticResource OvertimeScoreboardItemTemplate}"
                                                  Margin="0 -2 0 -2" />
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="2"
                                      HorizontalAlignment="Center">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding Demo.ScoreTeamT}"
                                                   Style="{StaticResource TeamScoreScoreboard}" />
                                        <TextBlock Text="{Binding Demo.TeamT.Name}"
                                                   Style="{StaticResource TeamTitleScoreboard}" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <DataGrid Grid.Row="0"
                                      ItemsSource="{Binding PlayersTeam1Collection, IsAsync=True}"
                                      SelectedItem="{Binding SelectedPlayer}"
                                      Style="{StaticResource DataGridStyle}"
                                      RowStyle="{StaticResource DataGridRowPlayerStyle}"
                                      MaxHeight="200"
                                      internals:ScrollViewerHelper.UseHorizontalScrolling="True">
                                <DataGrid.Resources>
                                    <converters:BindingProxy x:Key="BindingProxy" Data="{Binding}" />
                                </DataGrid.Resources>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDoubleClick">
                                        <i:InvokeCommandAction Command="{Binding ShowPlayerCommand, Mode=OneWay}"
                                                               CommandParameter="{Binding SelectedPlayer}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="{x:Static properties:Resources.Avatar}"
                                                            Width="Auto"
                                                            HeaderStyle="{StaticResource PlayerAvatarHeader}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding AvatarUrl}"
                                                       Height="22"
                                                       Width="22" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn HeaderStyle="{StaticResource PlayerOldRankNameHeader}"
                                                            Width="Auto"
                                                            Header="{x:Static properties:Resources.Rank}"
                                                            Visibility="{Binding Data.Demo.SourceName, Converter={StaticResource ValveDemoToVisibilityConverter}, Source={StaticResource BindingProxy}}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding RankNumberOld, Converter={StaticResource RankToImageConverter}}"
                                                       Height="18"
                                                       Width="45" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn HeaderStyle="{StaticResource PlayerNameHeader}"
                                                        Width="Auto"
                                                        Header="{x:Static properties:Resources.Name}"
                                                        Binding="{Binding Name}" />
                                    <DataGridTextColumn HeaderStyle="{StaticResource KillsHeader}"
                                                        Width="Auto"
                                                        Header="{x:Static properties:Resources.HeaderKills}"
                                                        Binding="{Binding KillCount}"
                                                        Visibility="{Binding Source={StaticResource Locator}, Path=Settings.ShowTotalKillsColumn, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <DataGridTextColumn HeaderStyle="{StaticResource AssistHeader}"
                                                        Width="Auto"
                                                        Header="{x:Static properties:Resources.HeaderAssists}"
                                                        Binding="{Binding AssistCount}"
                                                        Visibility="{Binding Source={StaticResource Locator}, Path=Settings.ShowAssistsColumn, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <DataGridTextColumn HeaderStyle="{StaticResource DeathHeader}"
                                                        Width="Auto"
                                                        Header="{x:Static properties:Resources.HeaderDeaths}"
                                                        Binding="{Binding DeathCount}"
                                                        Visibility="{Binding Source={StaticResource Locator}, Path=Settings.ShowDeathsColumn, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <DataGridTextColumn HeaderStyle="{StaticResource KDHeader}"
                                                        Width="Auto"
                                                        Header="{x:Static properties:Resources.HeaderKillDeathRatio}"
                                                        Binding="{Binding KillDeathRatio}"
                                                        Visibility="{Binding Source={StaticResource Locator}, Path=Settings.ShowKdColumn, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <DataGridTextColumn HeaderStyle="{StaticResource HeadshotHeader}"
                                                        Width="Auto"
                                                        Header="{x:Static properties:Resources.HeaderHeadshots}"
                                                        Binding="{Binding HeadshotCount}"
                                                        Visibility="{Binding Source={StaticResource Locator}, Path=Settings.ShowHsColumn, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <DataGridTextColumn HeaderStyle="{StaticResource HeadshotPercentHeader}"
                                                        Width="Auto"
                                                        Header="{x:Static properties:Resources.HeaderHsPercent}"
                                                        Binding="{Binding HeadshotPercent}"
                                                        Visibility="{Binding Source={StaticResource Locator}, Path=Settings.ShowHsColumn, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <DataGridTextColumn HeaderStyle="{StaticResource TeamKillHeader}"
                                                        Width="Auto"
                                                        Header="{x:Static properties:Resources.HeaderTeamKill}"
                                                        Binding="{Binding TeamKillCount}"
                                                        Visibility="{Binding Source={StaticResource Locator}, Path=Settings.ShowTkColumn, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <DataGridTextColumn HeaderStyle="{StaticResource EntryKillHeader}"
                                                        Width="Auto"
                                                        Header="{x:Static properties:Resources.HeaderEntryKills}"
                                                        Binding="{Binding EntryKills.Count}"
                                                        Visibility="{Binding Source={StaticResource Locator}, Path=Settings.ShowEkColumn, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <DataGridTextColumn HeaderStyle="{StaticResource BombPlantedHeader}"
