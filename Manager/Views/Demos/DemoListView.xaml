					Margin="10 5 0 0"
					Style="{DynamicResource GeneralButton}"
					Command="{Binding ShowMoreDemosCommand}"/>
			<Button Content="{x:Static properties:Resources.ShowAllDemos}"
					Grid.Column="1"
					Margin="10 5 0 0"
					Style="{DynamicResource GeneralButton}"
					Command="{Binding ShowAllDemosCommand}"/>
