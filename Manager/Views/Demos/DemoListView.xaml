					   Style="{StaticResource SmallTitleStyle}"
					   TextAlignment="Right"
					   Margin="10 0 5 0">
				<TextBlock.Text>
					<MultiBinding StringFormat="{}{0} {1}">
						<Binding Source="{StaticResource Locator}"
								 Path="DemoList.Demos.Count" />
						<Binding Source="{x:Static properties:Resources.Demos}" />
					</MultiBinding>
				</TextBlock.Text>
			</TextBlock>
