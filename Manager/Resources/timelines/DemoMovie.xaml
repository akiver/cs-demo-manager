    <DataTemplate x:Key="DemoMovieTimelineRoundTemplate">
        <StackPanel Orientation="Horizontal"
                    Height="25"
                    ContextMenu="{StaticResource DemoMovieRoundContextMenu}"
                    Background="{DynamicResource BlackBrush}"
                    d:DataContext="{d:DesignInstance telerik:TimelineDataItem}">
            <TextBlock VerticalAlignment="Center"
                       Margin="5 0 0 0"
                       Style="{StaticResource DemoMovieTimeLineRoundTextBlockStyle}"
                       Foreground="{StaticResource RedColorBrush}"
                       Text="{Binding DataItem.Number, StringFormat='#{0}: '}" />
            <TextBlock VerticalAlignment="Center"
                       Style="{StaticResource DemoMovieTimeLineRoundTextBlockStyle}"
                       Foreground="{StaticResource OrangeBrush}"
                       Text="{Binding DataItem.StartTick, StringFormat='{}{0} '}" />
            <TextBlock Style="{StaticResource DemoMovieTimeLineRoundTextBlockStyle}" Text="-" />
            <TextBlock VerticalAlignment="Center"
                       Style="{StaticResource DemoMovieTimeLineRoundTextBlockStyle}"
                       Foreground="{StaticResource OrangeBrush}"
                       Text="{Binding DataItem.EndTick, StringFormat=' \{0}'}" />
            <TextBlock VerticalAlignment="Center"
                       Style="{StaticResource DemoMovieTimeLineRoundTextBlockStyle}"
                       Text="{Binding DataItem.Duration.TotalSeconds, StringFormat=' \({0:N0}s)'}" />
        </StackPanel>
    </DataTemplate>

