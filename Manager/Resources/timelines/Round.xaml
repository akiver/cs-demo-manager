						</DataTrigger>
						<DataTrigger Binding="{Binding Source={x:Static properties:Settings.Default}, Path=Theme}" Value="Light">
							<Setter Property="Source" Value="pack://application:,,,/csgodm.resources;component/images/icons/kill_black.png"/>
